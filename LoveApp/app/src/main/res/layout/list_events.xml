<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtListEventHeader"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tháng 9 Năm 2016"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:background="@color/dark"
            android:visibility="gone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">
        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/calendar_important"
                android:id="@+id/iconListEvent"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtListEventName"
                android:text="Noel"
                android:textSize="17dp"
                android:layout_alignParentTop="true"
                android:textColor="@color/middleblue"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtListEventDate"
                android:text="24/12/2016"
                android:textSize="13dp"
                android:layout_alignParentTop="true"
                android:textColor="@color/middlegrey"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtListEventDaysLeft"
                android:textColor="@color/primary"
                android:text="Còn 5 ngày"
                android:textSize="14dp"
                android:layout_alignParentTop="true"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
