<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cntt.dbom.loveapp.TimeLineActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:background="@color/header"
        android:weightSum="1"
        android:elevation="4dp"
        >
        <com.cntt.dbom.loveapp.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:civ_border_width="1dp"
            app:civ_border_color="#FFF"
            android:id="@+id/image_avatar_man"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/avatar_man"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"
            />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image_heart"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:src="@drawable/heart"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />
            <TextView
                android:id="@+id/days"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#ffd9ed"
                android:text="365"
                android:textSize="25dp"
                android:fontFamily="cursive"
                android:layout_width="90dp"
                android:layout_height="80dp"
                />
        </FrameLayout>
        <com.cntt.dbom.loveapp.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:civ_border_width="1dp"
            app:civ_border_color="#FFF"
            android:id="@+id/image_avatar_women"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/avatar_ahri"
            android:layout_marginRight="16dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"></LinearLayout>
</RelativeLayout>
